---
import "../styles/reset.css";
import "../styles/base.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Frontend Case Studies</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    background-color: #f6f8fa;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  main {
    background: #fff;
    border: thin solid #e1e4e8;
    border-top: none;
    border-bottom: none;
    max-width: 60rem;
    margin: auto;
    padding: 1rem 1.5rem;
  }

  @media (min-width: 66rem) {
    main {
      padding-inline: 3rem;
    }
  }
</style>
